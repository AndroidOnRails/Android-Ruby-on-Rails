  <h2>
    <%= link_to photo.title, photo %>
  </h2>
 
  <% if @current_user == photo.user %>
  <%= link_to 'Edit', edit_photo_path(photo) %>
  <%= link_to 'Destroy', photo, :confirm => 'Are you sure?', :method => :delete %>
  <br />
<% end %>
 
<%= link_to image_tag(photo.public_filename(:thumb)), photo %>
<%= textilize h(truncate(photo.description)) %>

 
<br />
<b>Posted by</b> <%= link_to photo.user.login, photo.user %>
<hr />
<% end %>
<br />
